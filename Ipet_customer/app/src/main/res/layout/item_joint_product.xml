<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_joint_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_dog_food2" />

    <TextView
        android:id="@+id/textView_joint_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="08.10 ~ 09.23"
        android:textAppearance="@style/Typography.Regular20"
        app:layout_constraintEnd_toEndOf="@+id/imageView_joint_img"
        app:layout_constraintTop_toTopOf="@+id/imageView_joint_img" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView_joint_img">

        <TextView
            android:id="@+id/textView_joint_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강아지 사료"
            android:textAppearance="@style/Typography.Regular18" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/brown_200"
            app:srcCompat="@drawable/ic_groups_24dp" />

        <Space
            android:layout_width="3dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_joint_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="9/100"
            android:textAppearance="@style/Typography.Medium16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView_joint_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9,000원"
            android:textAppearance="@style/Typography.Bold16" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_joint_costPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,000원"
            android:textAppearance="@style/Typography.Regular16"
            android:textColor="@color/gray" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>