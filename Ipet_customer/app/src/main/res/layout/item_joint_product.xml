<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_joint_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_dog_food2" />

    <TextView
        android:id="@+id/textView_joint_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="08.10 ~ 09.23"
        android:textAppearance="@style/Typography.Regular15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_joint_img" />

    <TextView
        android:id="@+id/textView_joint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="강아지 사료"
        android:textAppearance="@style/Typography.Regular18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_joint_img" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/textView_joint_member"
        app:layout_constraintTop_toBottomOf="@+id/imageView_joint_img"
        app:srcCompat="@drawable/ic_groups_24dp"
        app:tint="@color/brown_200" />

    <TextView
        android:id="@+id/textView_joint_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="9/100"
        android:textAppearance="@style/Typography.Medium16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_joint_img" />

    <TextView
        android:id="@+id/textView_joint_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9,000원"
        android:textAppearance="@style/Typography.Bold16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_joint_title" />

    <TextView
        android:id="@+id/textView_joint_costPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12,000원"
        android:textAppearance="@style/Typography.Regular16"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/textView_joint_price"
        app:layout_constraintTop_toBottomOf="@+id/textView_joint_title" />

</androidx.constraintlayout.widget.ConstraintLayout>