<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.payment.PaymentCompleteFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView_paymentComplete"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:lottie_rawRes="@raw/raw_payment_success" />

    <TextView
        style="@style/Typography.Bold32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="결제 완료!"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_payment_complete_go_main"
        style="@style/Typography.Medium24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="메인 화면 가기"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_payment_complete_go_order"
        style="@style/Typography.Medium24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="주문 확인 하기"
        android:textColor="@color/white"
        android:backgroundTint="@color/rose_100"/>
</LinearLayout>