<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_itemCoupon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_coupon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemcoupon_type"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:textAppearance="@style/Typography.Bold20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_coupon_boundary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_itemcoupon_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/Typography.Medium20"
        android:textColor="#656565"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_coupon_horizontal"
        app:layout_constraintStart_toStartOf="@+id/guideLine_coupon_boundary" />

    <TextView
        android:id="@+id/textView_itemcoupon_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Typography.Medium12"
        android:textColor="#929292"
        app:layout_constraintStart_toStartOf="@+id/guideLine_coupon_boundary"
        app:layout_constraintTop_toTopOf="@id/guideLine_coupon_horizontal" />

    <View
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@drawable/shape_dash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_coupon_boundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="150dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_coupon_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>