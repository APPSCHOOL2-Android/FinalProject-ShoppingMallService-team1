<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/textView_changeAddress_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="@style/Typography.Medium16" />

    <EditText
        android:id="@+id/editText_changeAddress_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="상세 주소"
        android:inputType="text"
        android:textAppearance="@style/Typography.Medium16" />

    <Button
        android:id="@+id/button_changeAddress_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배송지 주소 검색" />

    <Button
        android:id="@+id/button_changeAddress_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력 완료" />

</LinearLayout>